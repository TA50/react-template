{
  "name": "flash-cards",
  "packageManager": "yarn@3.2.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @flash-cards/ui start",
    "build-ui": "yarn workspace @flash-cards/ui build",
    "build": "yarn wsrun -eyt --report -x @flash-cards/ui  build ",
    "clean-build": "node ./processes/clean-dists",
    "lint": "yarn eslint \"**/*.ts\" ",
    "format": "yarn prettier --check  \"**/*.ts\" ",
    "format-fix": "yarn prettier --write  \"**/*.ts\" ",
    "lint-fix": "yarn eslint --fix \"**/*.ts\"  "
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "latest",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.7.1",
    "wsrun": "^5.2.4"
  }
}
